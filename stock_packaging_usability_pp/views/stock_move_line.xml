<odoo>


<record id="view_stock_move_line_operation_tree" model="ir.ui.view">
    <field name="name">stock_packaging_usability_pp.stock.move.line.form</field>
    <field name="model">stock.move.line</field>
    <field name="inherit_id" ref="stock_packaging_usability.view_stock_move_line_operation_tree" />
    <field name="arch" type="xml">
        <button name="put_in_new_pack" position="attributes">
            <attribute name="type">action</attribute>
            <attribute name="name">%(stock_select_product_packaging_action)d</attribute>
            <attribute name="context">{'pack_function': 'put_in_new_pack', 'stock_packaging_usability_return_action': True}</attribute>
        </button>
    </field>
</record>


</odoo>
